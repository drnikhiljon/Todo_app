CREATE TABLE todos (
    id VARCHAR(255) PRIMARY KEY, -- Changed to VARCHAR for alphanumeric ID
    task_name VARCHAR(255) NOT NULL,
    start_time TIMESTAMP NOT NULL, -- Made mandatory
    end_time TIMESTAMP NOT NULL,   -- Made mandatory
    details TEXT NOT NULL,         -- Made mandatory
    status VARCHAR(50) DEFAULT 'Pending',
    media_data BYTEA,
    media_filename VARCHAR(255),
    media_mimetype VARCHAR(100)
);
